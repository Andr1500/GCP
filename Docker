eth0: <BROADCAST,MULTICAST,UP,LOWER_UP> mtu 1460 qdisc pfifo_fast state UP group default q
len 1000
    link/ether 42:01:0a:a6:00:07 brd ff:ff:ff:ff:ff:ff
    inet 10.166.0.7/32 brd 10.166.0.7 scope global eth0
       valid_lft forever preferred_lft forever
    inet6 fe80::4001:aff:fea6:7/64 scope link 
       valid_lft forever preferred_lft forever
	   
